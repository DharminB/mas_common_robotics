# /bin/bash

### install debian packages
sudo apt-get install -y  python-setuptools ros-groovy-ros ros-groovy-simulator-gazebo ros-groovy-vision-opencv python-rosinstall python-vcstools ros-groovy-brics-actuator liblog4cpp5-dev

### install further repositories
rosinstall .. /opt/ros/groovy repository.rosinstall

### install dependencies of BRSU repositories
dependent_repositories=('mas_third_party_software')
for i in $dependent_repositories
do
    ../$i/repository.debs
done
