<?xml version="1.0"?>
<launch>

    <!-- Calls mas_third_party_software mercury_planner plan script -->

    <arg name="domain" default="test_domain" />
    <arg name="problem" default="p01" />

    <arg name="domain_full_path" default="$(find mir_knowledge)/common/pddl/$(arg domain)/domain.pddl" />
    <arg name="problem_full_path" default="$(find mir_knowledge)/common/pddl/$(arg domain)/problems/$(arg problem).pddl" />
    
    <node pkg="mcr_task_planning_tools" type="run_script_node" name="mercury_planner" output="screen">
        <param name="script_path" value="$(find mercury_planner)/build/seq-sat-mercury/plan" />
        <rosparam param="script_arguments" subst_value="True">[$(arg domain_full_path), $(arg problem_full_path), mercury_plan]</rosparam>
    </node>

</launch>
