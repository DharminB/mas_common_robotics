<?xml version="1.0"?>
<launch>
    <node pkg="mcr_common_converters" type="pose_error_to_pose_converter_node"
          name="pose_error_to_pose_converter_node" output="screen" ns="mcr_common" >

        <rosparam command="load" file="$(find mcr_common_converters)/ros/config/pose_error_to_pose_converter.yaml" />

    </node>

    <test pkg="mcr_common_converters" type="pose_error_to_pose_converter_test.py"
            test-name="test_pose_error_to_pose_converter">

        <remap from="~component_output" to="mcr_common/pose_error_to_pose_converter_node/pose_error"/>
        <remap from="~event_out" to="mcr_common/pose_error_to_pose_converter_node/event_in"/>
        <remap from="~component_input" to="mcr_common/pose_error_to_pose_converter_node/pose"/>

    </test>
</launch>