<?xml version="1.0"?>
<launch>

  <arg name="input_pointcloud_topic" default="/tower_cam3d/depth_registered/points" />
  <include file="$(find mcr_scene_segmentation)/ros/launch/scene_segmentation.launch" >
    <arg name="input_pointcloud_topic" value="$(arg input_pointcloud_topic)" />
  </include>

  <node pkg="mcr_perception_tools" type="save_pointcloud" name="save_pointcloud" ns="mcr_perception" output="screen" respawn="false">
    <param name="input_topic" value="/collect_object_pointclouds/object_cloud" />
    <param name="frame_rate" type="int" value="5" />
    <!-- file type options are ascii, binary and compressed -->
    <param name="file_type" type="string" value="ascii" />
  </node>
</launch>
